const app = document.getElementById('typewriter')/* necesitamos una variable q vamos a llamar app.*/ 
/*esa variable va a representar el div donde se va a escribir. Para tener acceso a ese div vamos a usar document q representa el documento html.
El metodo va a ser getElementById. El Id de ese div es typewriter.*/
;
/*a continuacion creamos el typewriter. Le pasamos la variable app q representa el div, y tambien le vamos a pasar
dos opciones.*/
const typewriter = new Typewriter(app,{
    loop:true,/*la 1Âª opcion es loop. El valor true lo q hace es que siga funcionando*/
    delay:75/*esto indica la velocidad a la que se va a escribir cada caracter*/
});

/*el typewriter q hemos creado tiene varios metodos*/
typewriter
.typeString('La capital del Sol')/* es lo q vamos a imprimir*/
.pauseFor(200)/*antes de empezar vamos a tener una pausa de 200 milisegundos*/
.start();/*lo arrancamos con el metodo start()*/